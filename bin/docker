#!/bin/bash

root_dir=`pwd`
php_bin=`which php`
docker_compose_bin=`which docker-compose`
docker_bin="$root_dir/bin/docker"

function dockerps {
  target=$1
  return=$($docker_compose_bin ps $target | grep 'Up')

  if [[ -n $return ]]; then
    echo 1
  else
    echo 0
  fi
}

function dockerexec {
  args=$@
  $docker_compose_bin exec $args
}

function dockershell {
  target=$1
  dockerexec $target /bin/sh
}

function dockerstart {
  echo "starting docker"
  $docker_compose_bin up &
}

function  dockerstop {
  echo "stopping docker"
  $docker_compose_bin down &
}

if ! [ -e $docker_bin ]; then
    echo "This script should be run from the root dir"
    exit
fi

###########
## start ##
###########

cd $root_dir/docker

case "$1" in
  start|go|up)
      if [[ $(dockerps web) = 1 ]]; then
        echo "docker is up"
      else
        dockerstart
      fi
      ;;
  stop|k|down)
      if [[ $(dockerps web) = 1 ]]; then
        dockerstop
      else
        echo "docker is not running"
      fi
      ;;
  status|st)
      if [[ $(dockerps web) = 1 ]]; then
        echo "docker is up"
      else
        echo "docker is down"
      fi
      ;;
  restart|r)
      dockerstop
      dockerstart
      ;;
  shell|sh)
      if [[ -n $2 ]]; then
        if [[ $(dockerps $2) = 1 ]]; then
          dockershell $2
        else
          echo "container $2 is down"
        fi
      else
        echo "missing container name"
      fi
      ;;
  ps)
      $docker_compose_bin ps
      ;;
  console)
      if [[ $(dockerps php-fpm) = 1 ]]; then
        shift
        dockerexec php-fpm /var/www/html/bin/console $@
      else
        echo "container php-fpm is down"
      fi
    ;;
  *)
      echo $"Usage: $0 {start|go|up, stop|k|down, restart|r, status|st, sh[ell] <web|database|php-fpm>, console <command>}"
      exit 1
esac